{
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": {
    "predeploy": [
      "npm run build"
    ],
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**", "function": "api"
      },
      {
        "source": "/detail/*", "function": "api"
      },
      {
        "source": "**",
        "destination": "/default.html"
      }
    ]  
  }
}
